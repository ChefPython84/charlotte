{# templates/compte/change_password.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}Changer mon mot de passe{% endblock %}

{% block body %}
<div class="container my-5">
    <div class="row">

        {# Colonne de gauche : Menu #}
        <div class="col-md-3">
            {% include 'compte/_menu.html.twig' with { active: 'profil' } %}
        </div>

        {# Colonne de droite : Formulaire #}
        <div class="col-md-9">
            <h1 class="h3 mb-4">Changer mon mot de passe</h1>

            {% include '_partials/_flash_messages.html.twig' %}

            <div class="card shadow-sm">
                <div class="card-body p-4">
                    {{ form_start(passwordForm) }}
                        
                        {# --- DÉBUT DE LA MODIFICATION --- #}
                        {# On personnalise le champ "Mot de passe actuel" pour y ajouter le bouton #}
                        <div class="mb-3">
                            {{ form_label(passwordForm.currentPassword) }}
                            <div class="input-group">
                                {{ form_widget(passwordForm.currentPassword, {
                                    'attr': {'class': 'form-control', 'autocomplete': 'current-password'}
                                }) }}
                                <button class="btn btn-outline-secondary" type="button" id="toggleCurrentPassword">
                                    <i class="bi bi-eye-slash" id="toggleCurrentPasswordIcon"></i>
                                </button>
                            </div>
                            <div class="form-text text-danger">
                                {{ form_errors(passwordForm.currentPassword) }}
                            </div>
                        </div>
                        {# --- FIN DE LA MODIFICATION --- #}

                        
                        <hr class="my-3">
                        
                        {{ form_row(passwordForm.newPassword.first) }}
                        {{ form_row(passwordForm.newPassword.second) }}
                        
                        <button type="submit" class="btn btn-success mt-4">Changer le mot de passe</button>
                    {{ form_end(passwordForm) }}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}


{# On ajoute le bloc JavaScript à la fin du fichier #}
{% block javascripts %}
    {# parent() inclut les scripts de base.html.twig (si vous en avez) #}
    {{ parent() }}

    <script>
        // On attend que la page soit chargée
        document.addEventListener('DOMContentLoaded', function() {
            
            // On sélectionne le bouton, l'icône et le champ de mot de passe
            const toggleButton = document.getElementById('toggleCurrentPassword');
            const passwordInput = document.getElementById('{{ passwordForm.currentPassword.vars.id }}');
            const eyeIcon = document.getElementById('toggleCurrentPasswordIcon');

            // On s'assure que tout existe avant d'ajouter l'écouteur
            if (toggleButton && passwordInput && eyeIcon) {
                
                toggleButton.addEventListener('click', function() {
                    // Basculer le type de l'input
                    const type = passwordInput.getAttribute('type') === 'password' ? 'text' : 'password';
                    passwordInput.setAttribute('type', type);
                    
                    // Changer l'icône de l'œil
                    if (type === 'password') {
                        // Si c'est un mot de passe (caché)
                        eyeIcon.classList.remove('bi-eye');
                        eyeIcon.classList.add('bi-eye-slash');
                    } else {
                        // Si c'est du texte (visible)
                        eyeIcon.classList.remove('bi-eye-slash');
                        eyeIcon.classList.add('bi-eye');
                    }
                });
            }
        });
    </script>
{% endblock %}