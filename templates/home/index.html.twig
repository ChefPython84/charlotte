{% extends 'base.html.twig' %}

{% block title %}Accueil - Espace 1500{% endblock %}

{% block body %}

{# --- BLOC STATS SUPPRIMÉ --- #}
{# (Il y avait un bloc <div class="row stats">...</div> ici) #}


{# Section Recherche #}
<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-10 text-center">
            <h1 class="display-4">Trouvez la salle parfaite</h1>
            <p class="lead text-muted mb-4">Recherchez parmi nos {{ salles|length }} salles disponibles pour votre prochain événement.</p>

            {# Formulaire de filtres (action="home") #}
            <form method="get" action="{{ path('home') }}" class="p-4 bg-light rounded shadow-sm">
                <div class="row g-2">
                    <div class="col-lg-4">
                        <input type="text" name="q" value="{{ q|default('') }}" class="form-control" placeholder="Mot-clé (ex: 'réunion', 'mariage'...)">
                    </div>
                    <div class="col-lg-2">
                        <input type="text" name="ville" value="{{ ville|default('') }}" class="form-control" placeholder="Ville">
                    </div>
                    <div class="col-lg-2">
                        <input type="number" name="capacite" value="{{ capacite|default(0) > 0 ? capacite : '' }}" class="form-control" placeholder="Capacité min.">
                    </div>
                    <div class="col-lg-2">
                         <select name="sort" class="form-select">
                            <option value="recent" {{ sort == 'recent' ? 'selected' : '' }}>Plus récents</option>
                            <option value="prix_asc" {{ sort == 'prix_asc' ? 'selected' : '' }}>Prix (croissant)</option>
                            <option value="prix_desc" {{ sort == 'prix_desc' ? 'selected' : '' }}>Prix (décroissant)</option>
                            <option value="capacite" {{ sort == 'capacite' ? 'selected' : '' }}>Capacité (décroissant)</option>
                        </select>
                    </div>
                    <div class="col-lg-2">
                        <button type="submit" class="btn btn-primary w-100">Rechercher</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

{# Section Résultats #}
<div class="container">
    <div class="row g-4">
        {% if salles|length > 0 %}
            {% for salle in salles %}
                <div class="col-md-6 col-lg-4">
                    <div class="card h-100 shadow-sm border-0">
                        {# Logique pour afficher la photo principale #}
                        {% set mainPhoto = salle.photos|filter(p => p.isPrincipale)|first %}
                        <img src="{{ mainPhoto ? asset(mainPhoto.url) : 'https://via.placeholder.com/300x200' }}" class="card-img-top" alt="{{ salle.nom }}" style="height: 200px; object-fit: cover;">
                        
                        <div class="card-body">
                            <h5 class="card-title">{{ salle.nom }}</h5>
                            <p class="card-text text-muted">
                                <i class="bi bi-geo-alt-fill"></i> {{ salle.ville }}
                                <br>
                                <i class="bi bi-people-fill"></i> {{ salle.capacite }} personnes
                            </p>
                            <p class="card-text small">{{ salle.description|slice(0, 100) ~ '...' }}</p>
                        </div>
                        <div class="card-footer bg-white d-flex justify-content-between align-items-center">
                            <span class="fw-bold fs-5 text-success">{{ salle.prixJour }}€ / jour</span>
                            <a href="{{ path('salle_show', {id: salle.id}) }}" class="btn btn-outline-primary btn-sm">Voir détails</a>
                        </div>
                    </div>
                </div>
            {% endfor %}
        {% else %}
            <div class="col-12">
                <div class="alert alert-warning text-center">
                    Aucune salle ne correspond à vos critères de recherche.
                </div>
            </div>
        {% endif %}
    </div>
</div>

{% endblock %}