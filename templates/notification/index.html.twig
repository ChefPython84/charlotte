{# templates/notification/index.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}Mes Notifications{% endblock %}

{% block body %}
<div class="container my-5">
    <div class="row">

        {# Colonne de gauche : Menu #}
        <div class="col-md-3">
            {% include 'compte/_menu.html.twig' with { active: 'notifications' } %}
        </div>

        {# Colonne de droite : Contenu #}
        <div class="col-md-9">
            <h1 class="h3 mb-4">ðŸ“© Mes Notifications</h1>
            
            <div class="card shadow-sm">
                <div class="table-responsive">
                    <table class="table table-hover mb-0 align-middle">
                        <thead class="table-light">
                            <tr>
                                <th>Message</th>
                                <th>Date</th>
                                <th class="text-center">Statut</th>
                                <th class="text-end">Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for notif in notifications %}
                                <tr class="{{ notif.estLu ? '' : 'table-light fw-bold' }}">
                                    
                                    {# --- MODIFICATION ICI --- #}
                                    <td>
                                        {% if notif.link %}
                                            {# Si un lien existe, on le rend cliquable #}
                                            <a href="{{ notif.link }}" class="text-decoration-none text-dark">
                                                {{ notif.message }}
                                                {# Optionnel: icÃ´ne 'lien externe' si vous utilisez Bootstrap Icons #}
                                                {# <i class="bi bi-box-arrow-up-right small ms-1"></i> #}
                                            </a>
                                        {% else %}
                                            {# Sinon, on affiche juste le message #}
                                            {{ notif.message }}
                                        {% endif %}
                                    </td>
                                    {# --- FIN MODIFICATION --- #}
                                    
                                    <td>{{ notif.dateEnvoi|date('d/m/Y H:i') }}</td>
                                    <td class="text-center">
                                        {% if notif.estLu %}
                                            <span class="badge bg-light text-dark">Lu</span>
                                        {% else %}
                                            <span class="badge bg-primary">Non lu</span>
                                        {% endif %}
                                    </td>
                                    <td class="text-end">
                                        {% if not notif.estLu %}
                                            <a href="{{ path('app_notification_mark_read', {id: notif.id}) }}" 
                                               class="btn btn-sm btn-outline-primary">Marquer lu</a>
                                        {% endif %}
                                    </td>
                                </tr>
                            {% else %}
                                <tr>
                                    <td colspan="4" class="text-center text-muted p-4">Aucune notification</td>
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

    </div>
</div>
{% endblock %}