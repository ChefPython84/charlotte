{# templates/facture/show.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}Facture #{{ facture.id }}{% endblock %}

{% block body %}
<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            
            <a href="{{ path('app_compte') }}" class="btn btn-outline-primary mb-3">
                <i class="bi bi-arrow-left"></i> Retour à mon compte
            </a>

            {# Affiche les messages flash (succès, erreur) #}
            {% include '_partials/_flash_messages.html.twig' %}

            <div class="card shadow-sm">
                <div class="card-header bg-light d-flex justify-content-between align-items-center p-4">
                    <div>
                        <h1 class="h3 mb-0">Facture #{{ facture.id }}</h1>
                        <p class="text-muted mb-0">Réservation pour : {{ facture.reservation.salle.nom }}</p>
                    </div>
                    <div>
                        <span class="badge fs-6 
                            {% if facture.statut == 'payée' %}bg-success
                            {% elseif facture.statut == 'annulée' %}bg-danger
                            {% else %}bg-warning text-dark{% endif %}">
                            Statut : {{ facture.statut|capitalize }}
                        </span>
                    </div>
                </div>
                <div class="card-body p-4">
                    
                    <div class="row mb-3">
                        <div class="col">
                            <strong>Client :</strong><br>
                            {{ facture.reservation.user.prenom }} {{ facture.reservation.user.nom }}<br>
                            {{ facture.reservation.user.email }}
                        </div>
                        <div class="col text-end">
                            <strong>Date de facturation :</strong><br>
                            {{ facture.dateFacture|date('d/m/Y') }}<br>
                            <strong>Montant Total :</strong><br>
                            <h2 class="h4 text-primary mb-0">{{ facture.montant }} €</h2>
                        </div>
                    </div>

                    <hr>

                    <h5 class="mb-3">Détails de la réservation</h5>
                    <table class="table">
                        <tbody>
                            <tr>
                                <th style="width: 30%;">Salle</th>
                                <td>{{ facture.reservation.salle.nom }}</td>
                            </tr>
                            <tr>
                                <th>Du</th>
                                <td>{{ facture.reservation.dateDebut|date('d/m/Y à H:i') }}</td>
                            </tr>
                            <tr>
                                <th>Au</th>
                                <td>{{ facture.reservation.dateFin|date('d/m/Y à H:i') }}</td>
                            </tr>
                        </tbody>
                    </table>
                    
                    {% if facture.paiements|length > 0 %}
                        <h5 class="mt-4 mb-3">Paiements effectués</h5>
                        <ul class="list-group">
                            {% for paiement in facture.paiements %}
                                <li class="list-group-item d-flex justify-content-between">
                                    <span>Paiement {{ paiement.methode }} ({{ paiement.statut }})</span>
                                    <span>{{ paiement.datePaiement|date('d/m/Y') }} - {{ paiement.montant }} €</span>
                                </li>
                            {% endfor %}
                        </ul>
                    {% endif %}

                    {# --- CORRECTION DU BOUTON --- #}
                    {% if facture.statut == 'en attente' %}
                        <div class="text-center mt-4 p-3 bg-light rounded">
                            <p class="mb-2">Votre facture est en attente de paiement.</p>
                            {# Le href pointe maintenant vers notre contrôleur de checkout #}
                            <a href="{{ path('paiement_checkout', {id: facture.id}) }}" class="btn btn-success btn-lg">
                                Payer maintenant ({{ facture.montant }} €)
                            </a>
                        </div>
                    {% endif %}
                    {# --- FIN CORRECTION --- #}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}