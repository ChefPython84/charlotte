{% extends 'base.html.twig' %}

{% block title %}{{ salle.nom }} — Réservation{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    {# icônes Bootstrap Icons #}
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
    {# FullCalendar CSS #}
    <link href="https://cdn.jsdelivr.net/npm/fullcalendar@6.1.19/index.global.min.css" rel="stylesheet">
    <style>
    /* === Styles modernes / responsive === */
    .page-header {
      display: flex;
      gap: 1rem;
      align-items: center;
      justify-content: space-between;
      margin-bottom: 1rem;
    }
    .salle-card {
      border-radius: 1rem;
      overflow: hidden;
      box-shadow: 0 12px 30px rgba(16,24,40,0.06);
      background: #fff;
    }
    .salle-image {
      object-fit: cover;
      height: 260px;
      width: 100%;
    }
    .btn-gradient {
      background: linear-gradient(135deg,#6f42c1,#0d6efd);
      color: #fff;
      border: none;
    }
    .btn-gradient:hover { opacity: .9; transform: translateY(-2px); }
    #calendar {
      background: #fff;
      border-radius: 1rem;
      padding: 1rem;
      box-shadow: 0 12px 30px rgba(16,24,40,0.06);
      min-height: 420px;
    }
    .fc .fc-toolbar-title { color: #0d6efd; font-weight: 600; }
    .fc-button-primary {
      background: linear-gradient(135deg,#6f42c1,#0d6efd) !important;
      border-radius: 30px !important;
      border: none !important;
    }
    .fc-event { border-radius: 8px; padding: 2px 6px; font-size: .85rem; }

    /* responsive layout */
    @media (min-width: 992px) {
      .salle-layout { display: grid; grid-template-columns: 1fr 520px; gap: 1.25rem; align-items: start; }
    }
    /* toast container z-index */
    #toast-container { z-index: 2000; }
    </style>
{% endblock %}

{% block body %}
<div class="container py-4">
    <div class="page-header">
        <div>
            <h1 class="h3 fw-bold mb-1">{{ salle.nom }}</h1>
            <p class="text-muted mb-0">{{ salle.ville }} • {{ salle.capacite }} personnes</p>
        </div>
        <div class="d-flex gap-2">
            <a href="{{ path('salle_index') }}" class="btn btn-light">Toutes les salles</a>
            <button id="open-calendar-btn" class="btn btn-gradient">Voir calendrier</button>
        </div>
    </div>

    <div class="salle-layout">
        <div>
            <div class="salle-card mb-4">
                {% if salle.photos|length > 0 %}
                    <img src="{{ salle.photos|first.url }}" class="salle-image" alt="{{ salle.nom }}">
                {% else %}
                    <div class="salle-image d-flex align-items-center justify-content-center text-muted" style="height:260px;">
                        Pas d'image
                    </div>
                {% endif %}
                <div class="p-4">
                    <h3 class="h5 fw-bold text-primary">{{ salle.nom }}</h3>
                    <p class="text-muted">{{ salle.description }}</p>

                    <div class="row gx-2 gy-2 mt-3">
                        <div class="col-6">
                            <div class="small text-muted">Capacité</div>
                            <div class="fw-semibold">{{ salle.capacite }} personnes</div>
                        </div>
                        <div class="col-6">
                            <div class="small text-muted">Prix / jour</div>
                            <div class="fw-semibold">{{ salle.prixJour }} €</div>
                        </div>
                        <div class="col-6 mt-3">
                            <div class="small text-muted">Ville</div>
                            <div>{{ salle.ville }}</div>
                        </div>
                        <div class="col-6 mt-3">
                            <div class="small text-muted">Adresse</div>
                            <div>{{ salle.adresse }}</div>
                        </div>
                    </div>

                    <div class="mt-4">
                        <a href="#" class="btn btn-outline-primary me-2 rounded-pill">Contact</a>
                        <a href="#" class="btn btn-gradient rounded-pill">Demander visite</a>
                    </div>
                </div>
            </div>

            {# Optionnel: autres infos, équipements, avis, etc. #}
        </div>

        <div>
            <div id="calendar" data-salle-id="{{ salle.id }}"></div>
        </div>
    </div>
</div>

{# Modal pour réservation (contenu chargé via AJAX) #}
<div class="modal fade" id="reservationModal" tabindex="-1" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered">
    <div class="modal-content rounded-4" id="reservationModalContent">
      <!-- Chargé via AJAX -->
      <div class="p-4 text-center">
        <div class="spinner-border text-primary" role="status"></div>
      </div>
    </div>
  </div>
</div>

{# Conteneur pour toasts #}
<div id="toast-container" class="position-fixed bottom-0 end-0 p-3"></div>

{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {# FullCalendar + Bootstrap (si pas déjà inclus globalement) #}
    <script src="https://cdn.jsdelivr.net/npm/fullcalendar@6.1.19/index.global.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

    <script>
    document.addEventListener('DOMContentLoaded', function () {
        const el = document.getElementById('calendar');
        const salleId = el.dataset.salleId;

        // helper toast
        function showToast(message, type = 'success') {
            const toastId = 't' + Date.now();
            const wrapper = document.createElement('div');
            wrapper.innerHTML = `
              <div id="${toastId}" class="toast align-items-center text-bg-${type} border-0 mb-2" role="alert" aria-live="assertive" aria-atomic="true">
                <div class="d-flex">
                  <div class="toast-body">${message}</div>
                  <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast" aria-label="Close"></button>
                </div>
              </div>`;
            const node = wrapper.firstElementChild;
            document.getElementById('toast-container').appendChild(node);
            const bsToast = new bootstrap.Toast(node, { delay: 4000 });
            bsToast.show();
            node.addEventListener('hidden.bs.toast', () => node.remove());
        }

        // instantiate calendar
        const calendar = new FullCalendar.Calendar(el, {
            initialView: 'dayGridMonth',
            selectable: true,
            headerToolbar: {
                left: 'prev,next today',
                center: 'title',
                right: 'dayGridMonth,timeGridWeek'
            },
            events: `/salle/${salleId}/reservations`,
            select: function(info) {
                const modalEl = document.getElementById('reservationModal');
                const modal = new bootstrap.Modal(modalEl);
                modal.show();

                // load form fragment
                fetch(`/salle/${salleId}/reservation/new?start=${info.startStr}&end=${info.endStr}`, {
                    headers: { 'X-Requested-With': 'XMLHttpRequest' }
                })
                .then(r => r.text())
                .then(html => {
                    document.getElementById('reservationModalContent').innerHTML = html;

                    const form = document.getElementById('reservation-form');
                    if (!form) return;

                    // replace to remove old listeners
                    const newForm = form.cloneNode(true);
                    form.replaceWith(newForm);

                    newForm.addEventListener('submit', async function(e) {
                        e.preventDefault();
                        const submitBtn = newForm.querySelector('[data-submit]') || newForm.querySelector('button[type="submit"]');
                        if (submitBtn) {
                            submitBtn.disabled = true;
                            submitBtn.innerHTML = '<span class="spinner-border spinner-border-sm me-2" role="status" aria-hidden="true"></span>En cours...';
                        }

                        try {
                            const fd = new FormData(newForm);
                            const resp = await fetch(newForm.action, {
                                method: 'POST',
                                headers: { 'X-Requested-With': 'XMLHttpRequest' },
                                body: fd
                            });

                            if (resp.status === 403) {
                                showToast('Vous devez être connecté pour réserver', 'warning');
                                return;
                            }

                            const json = await resp.json();
                            if (json.success) {
                                modal.hide();
                                calendar.refetchEvents();
                                showToast('Réservation enregistrée !', 'success');
                            } else {
                                showToast(json.message || 'Erreur lors de la réservation', 'danger');
                            }
                        } catch (err) {
                            console.error(err);
                            showToast('Erreur réseau — réessayez', 'danger');
                        } finally {
                            if (submitBtn) {
                                submitBtn.disabled = false;
                                submitBtn.innerHTML = 'Réserver';
                            }
                        }
                    });
                });
            }
        });

        calendar.render();

        // bouton pour ouvrir calendrier (ux)
        const openBtn = document.getElementById('open-calendar-btn');
        if (openBtn) {
            openBtn.addEventListener('click', () => {
                el.scrollIntoView({ behavior: 'smooth', block: 'center' });
            });
        }
    });
    </script>
{% endblock %}
