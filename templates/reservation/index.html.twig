{% extends 'base.html.twig' %}

{% block title %}Mes réservations{% endblock %}

{% block body %}
<div class="container py-4">
  <h1 class="mb-4">Mes réservations</h1>
  <table class="table table-hover align-middle">
    <thead class="table-light">
      <tr>
        <th>Salle</th>
        <th>Début</th>
        <th>Fin</th>
        <th>Statut</th>
        <th>Total</th>
      </tr>
    </thead>
    <tbody>
      {% for reservation in reservations %}
        <tr>
          <td>{{ reservation.salle.nom }}</td>
          <td>{{ reservation.dateDebut|date('d/m/Y H:i') }}</td>
          <td>{{ reservation.dateFin|date('d/m/Y H:i') }}</td>
          <td>
            <span class="badge 
              {% if reservation.statut == 'confirmée' %}bg-success
              {% elseif reservation.statut == 'en attente' %}bg-warning
              {% else %}bg-danger{% endif %}">
              {{ reservation.statut }}
            </span>
          </td>
          <td>{{ reservation.prixTotal }} €</td>
        </tr>
      {% else %}
        <tr><td colspan="5" class="text-muted text-center">Aucune réservation</td></tr>
      {% endfor %}
    </tbody>
  </table>
</div>
{% endblock %}
