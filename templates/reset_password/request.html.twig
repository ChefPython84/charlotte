{# templates/reset_password/request.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}Mot de passe oublié{% endblock %}

{% block body %}
<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-md-6">

            {# Afficher les messages flash (erreurs du bundle, etc.) #}
            {% for flash_error in app.flashes('reset_password_error') %}
                <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
            {% endfor %}

            <div class="card shadow-sm">
                <div class="card-body p-4">
                    <h1 class="h3 mb-3 fw-normal text-center">Mot de passe oublié ?</h1>
                    <p class="text-muted text-center small mb-4">
                        Entrez votre adresse email et nous vous enverrons un lien pour réinitialiser votre mot de passe.
                    </p>

                    {{ form_start(requestForm) }}
                        <div class="mb-3">
                            {{ form_row(requestForm.email, {
                                label: 'Adresse Email'
                            }) }}
                        </div>

                        <button class="btn btn-primary w-100">Envoyer le lien</button>
                    {{ form_end(requestForm) }}

                    <div class="text-center mt-4">
                        <a href="{{ path('app_login') }}" class="small">Retour à la connexion</a>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>
{% endblock %}